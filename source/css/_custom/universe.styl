// 白天不显示星空粒子
canvas#universe
  display: none
  +maxWidth768()
    display: none

// 移动端不显示季节飘落
canvas#canvas_sakura
  +maxWidth768()
    display: none


//  深色模式粒子效果canvas
[data-theme="dark"] 
  canvas#universe
    display: block
    position: fixed
    margin: 0
    padding: 0
    border: 0
    outline: 0
    left: 0
    top: 0
    width: 100%
    height: 100%
    pointer-events: none
    z-index: 1
  // 夜间不显示季节飘落
  canvas#canvas_sakura
    display: none

