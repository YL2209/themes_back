      .bgbox
        display: flex
        flex-wrap: wrap
        justify-content: space-between

      .pimgbox,
      .imgbox,
      .box
        height: 100px
        width: 166px
        margin: 10px
        border-radius: 10px
        background-size: cover
        &:hover
          scale: 1.05
          transition: all .3s ease-in-out
