// 自定义主题二
[naokuo-theme='mode2']
  // 鼠标指针
  --cursor-arrow: url("/cursor/Launa/Arrow.cur")
  --cursor-backrunning: url("/cursor/Launa/IBeam.cur")
  --cursor-ban: url("/cursor/Launa/NO.cur")
  --cursor-busy: url("/cursor/Launa/UpArrow.cur")
  --cursor-handwriting: url("/cursor/Launa/Sv.cur")
  --cursor-help: url("/cursor/Launa/Help.cur")
  --cursor-link: url("/cursor/Launa/Help.cur")
  --cursor-move: url("/cursor/Launa/Sall.cur")
  --cursor-input: url("/cursor/Launa/IBeam.cur")
  --web_bg: url("https://unpkg.com/naokuo-blog@1.1.1/img/2023-09-09022337.webp") // pc背景
  --web-mobile_bg: url("https://unpkg.com/naokuo-blog@1.1.1/img/2023-09-09022337.webp") //移动端背景
  --ark-post-item-border: #3c7199
  --ark-post-item-background: #3c719975
  --ark-post-item-screen: #3c7199a3
  --ark-post-item-font-color: #000
  --ark-post-item-font-hover: #d97f17
  --ark-post-item-box-shadow: #e6b18e61
  --ark-post-item-text-shadow: #3d3835
  --card-bg: rgba(255,255,255,0.4) //body背景色
  --font-color: #000000 //字体颜色
  --white: #ffffff
  --aside-content: #ffffff8c
  --hr-line-color: #f00
  --Waves_shape1:rgba(255,255,255,0.7)
  --Waves_shape2:rgba(255,255,255,0.5)
  --Waves_shape3:rgba(255,255,255,0.3)
  --Waves_shape4:#ffffffe7
  --snackbar-container:#000000
  --naokuomenus_item_child:#ffffffb0
  --naokuotext-bg-hover:#6fa8cd8c
  --naokuotheme-color: #ff7800
  --naokuo_folding-tag: #d0dfe68f
  --rect_background: #394d636e
  --mermaid-wrap_text: #000


  #aside-content .aside-list > .aside-list-item .content > time,
  #aside-content .aside-list > .aside-list-item .content > .name
    color: var(--font-color)


  // 电子时钟布局固定
  .card-background
    border-radius: 0px!important
    box-shadow: none!important
    #hexo_electric_clock
      padding: 40px 0px 0px 0px!important  
    .clock-row
        color: #fff


  // 卡片背景磨砂效果
  .cardHover,
  .error404 #error-wrap .error-content,
  #recent-posts > .recent-post-item,
  #content-inner #archive
    +minWidth768()
      backdrop-filter: blur(5px)

  // 夜间模式下设置    自定义主题二
  &[data-theme='dark']
    --web_bg: url("https://unpkg.com/naokuo-blog@1.1.1/img/2023-09-141827337.webp")
    --web-mobile_bg: url("https://unpkg.com/naokuo-blog@1.1.1/img/2023-09-141827337.webp")
    --ark-post-item-border: #1a1e25
    --ark-post-item-background: #2d32453d
    --ark-post-item-screen: #3a3d3e8a
    --ark-post-item-font-color: #fff
    --ark-post-item-font-hover: #d97f17
    --ark-post-item-box-shadow: #3a3c3f
    --ark-post-item-text-shadow: #bd8f74
    --card-bg: #0f1116bf
    --font-color: #bbbaba
    --white: #fff
    --hr-line-color: #7f5517
    --snackbar-container :#ffffff
    --naokuomenus_item_child:#0f151b75
    --naokuotext-bg-hover:#75808b8a
    --naokuo_folding-tag: #b0d5df40
    --rect_background: #51c4d35c
    --mermaid-wrap_text: #fff

    // 隐藏时钟背景
    .card-background 
        background-color: var(--canvas_sakura)!important

    details[open] > div.content
      background: none
