:root
  --nk-nav-border: 1px solid var(--nk-nav-card-border);  
  --nk-nav-border-always: 1px solid var(--nk-nav-card-border);
  --nk-nav-main: var(--nk-nav-theme);
  --nk-nav-white: #fff;
  --nk-nav-white-op: rgba(255, 255, 255, 0.2);
  --nk-nav-black: #000;
  --nk-nav-theme-op: #4259ef23; 
  --nk-nav-main-op: var(--nk-nav-theme-op);
  --nk-nav-shadow-main: 0 8px 12px -3px var(--nk-nav-main-op);
  --nk-nav-shadow-nav: 0 5px 12px -5px rgba(102, 68, 68, 0.05);
  --nk-nav-radius-full: 50px;
  --nk-nav-shadow-border: 0 8px 16px -4px #2c2d300c;
  --nk-nav-border-hover: 1px solid var(--nk-nav-main);
  --nk-nav-shadow-black: 0 0 12px 4px rgba(0, 0, 0, 0.05);
  --nk-nav-bar-background: var(--nk-nav-main);

[data-theme="light"]
  --nk-nav-card-border: #e3e8f7;
  --nk-nav-card-bg: #fff;
  --nk-nav-theme: #425AEF
  --nk-nav-fontcolor: #363636;
  --nk-nav-secondtext: rgba(60, 60, 67, 0.8);
  --nk-nav-secondbg: #f7f7f9;
  --nk-nav-txt: #ffffff;
  --nk-nav-maskbgdeep: rgba(255, 255, 255, 0.85);
  --nk-nav-lighttext: var(--nk-nav-theme);

[data-theme="dark"]
  --nk-nav-card-border: #42444a;
  --nk-nav-card-bg: #1d1e22;
  --nk-nav-theme: #f2b94b
  --nk-nav-fontcolor: #f7f7fa;
  --nk-nav-secondtext: #a1a2b8;
  --nk-nav-secondbg: #21232a;
  --nk-nav-txt: #000000;
  --nk-nav-maskbgdeep: rgba(0, 0, 0, 0.85);
  --nk-nav-lighttext: #f2b94b;

