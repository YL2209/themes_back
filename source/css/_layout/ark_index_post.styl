:root
  --ark-left-border-color: #818181 // 左边框
  --ark-right-border-color: #f58b49 // 右边框
  --ark-container-background: rgba(60,113,153,0.639) // 背景
  --ark-container-font: #fff

[data-theme="dark"]
  --ark-left-border-color: #37708f // 左边框
  --ark-right-border-color: #1849a0 // 右边框
  --ark-container-background: rgba(50,50,50,0.8) // 背景
  --ark-container-font: #fff


#content-inner 
  .post-outdate-notice 
    display: block
    border: 2px dotted red
    padding: 5px 20px
    border-radius: 5px


#content-inner #archive, 
#content-inner #category, 
#content-inner #page, 
#content-inner #post, 
#content-inner #tag 
  position: relative
  background: 0px 0px
  border-radius: 10px
  padding: 15px 5px !important


#content-inner #article-container,
#content-inner #post-comment,
#content-inner .category-lists, 
#content-inner .post-copyright, 
#content-inner .tag-cloud-list,
#content-inner .pagination-post#pagination
  color: var(--ark-container-font)
  border-radius: 10px
  padding: 10px 15px
  width: 100%
  height: 100%
  background: var(--ark-container-background)
  backdrop-filter: blur(5px)
  transform: translateZ(0px)
  border: 1px solid var(--ark-right-border-color)

