@media (min-width: 1200px)
  .poem
    margin 0 auto
    height auto
    writing-mode vertical-rl
    writing-mode tb-rl
    p
      text-decoration underline
      text-decoration-color rgba(193, 11, 11, 0.72)
      text-decoration-style dashed

.poem
  &.handwriting
    font-family: 'Ma Shan Zheng'  
  &.SimHei
    font-family: 'SimHei'
  &.SimSun
    font-family: 'SimSun'
  &.KaiTi
    font-family: 'KaiTi'
  p
    // font-family 'alimm2024','Ma Shan Zheng','KaiTi',sans-serif!important
    font-size 25px
    text-align center

  .poem-title
    // font-family 'alimm2024','Ma Shan Zheng','KaiTi',sans-serif!important
    font-size 2.5em
    text-align center

  .poem-author
    text-align center!important
    // font-family 'alimm2024','Ma Shan Zheng','KaiTi',sans-serif!important
    font-size 16px
    color rgb(66, 66, 66)
