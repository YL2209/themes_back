:root
  --naokuo-tabs--shadow-border: 0 8px 16px -4px #2c2d300c
  --style-border-always: 1px solid var(--naokuo-tabs--card-border)
  --style-border-hover-always: 1px solid var(--naokuo-tabs--main)
  --naokuo-tabs--white: #fff

[data-theme="light"]
  --naokuo-tabs--secondbg: #f7f7f9
  --naokuo-tabs--card-bg: transparent
  --naokuo-tabs--fontcolor: #363636
  --naokuo-tabs--card-border: #e3e8f7
  --naokuo-tabs--main: #425AEF
  --naokuo-tabs--background: #f7f9fe

[data-theme="dark"]
  --naokuo-tabs--secondbg: #21232a
  --naokuo-tabs--card-bg: transparent
  --naokuo-tabs--fontcolor: #f7f7fa
  --naokuo-tabs--card-border: #42444a
  --naokuo-tabs--main: #f2b94b
  --naokuo-tabs--background: #18171d

#article-container
  .tabs
    position: relative
    margin: 0 0 20px
    border: 3px solid var(--naokuo-tabs--secondbg)
    margin: 1rem 0 !important
    border-radius: 12px
    overflow: hidden
    box-shadow: var(--naokuo-tabs--shadow-border)
    background: var(--naokuo-tabs--card-bg)
    padding: 8px

    .tab-item-content
      color: var(--naokuo-tabs--fontcolor)

    > .nav-tabs
      display: flex
      flex-wrap: wrap
      justify-content: center
      margin: 0
      padding: 16px
      background: var(--naokuo-tabs--card-bg)

      > .tab
        padding: 8px 18px
        background: var(--naokuo-tabs--secondbg)
        color: var(--naokuo-tabs--fontcolor)
        line-height: 1
        transition: all .4s
        margin: 4px
        border: var(--style-border-always)
        border-radius: 8px

        i
          width: 1.5em

        &.active
          border: var(--style-border-hover-always)
          background: var(--naokuo-tabs--background)
          border-radius: 8px
          cursor: default

        &:not(.active)
          &:hover
            background: var(--naokuo-tabs--main)
            color: var(--naokuo-tabs--white)
            transition: .3s
            border: var(--style-border-hover-always)

      &.no-default
        & ~ .tab-to-top
          display: none

    > .tab-contents
      .tab-item-content
        position: relative
        display: none
        background: var(--naokuo-tabs--background)
        border: var(--style-border-always)
        padding: 1.2rem 1.2rem
        border-radius: 8px

        +maxWidth768()
          padding: 24px 14px

        &.active
          display: block

    > .tab-to-top
      padding: 0 16px 10px 0
      width: 100%
      text-align: right

      button
        color: #99a9bf

        &:hover
          color: #425AEF

@keyframes tabshow
  0%
    transform: translateY(15px)

  100%
    transform: translateY(0)