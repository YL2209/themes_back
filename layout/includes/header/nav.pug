nav#nav
  span#blog-info
    a(href=url_for('/') title=config.title)
      if theme.nav.logo
        img.site-icon(src=url_for(theme.nav.logo))
      if theme.nav.display_title
        span.site-name=config.title
    
  #menus
    if (theme.algolia_search.enable || theme.local_search.enable || theme.docsearch.enable)
      #search-button
        a.site-page.social-icon.search(href="javascript:void(0);" title="搜索")
          //- i.fas.iconfont.icon-sousuo.fa-fw.faa-tada.animated-hover
          svg.menu_icon(aria-hidden="true" class="fas faa-tada animated-hover" style="width:1.30em;height:1.30em;vertical-align:-0.15em;fill:currentColor;overflow:hidden;")
            use(xlink:href='#icon-sousuo1')
          span=' '+_p('search.title')

        a.site-page#naokuo_qiehuan(href="https://myxiaochuang.gitee.io/" target="_top")
          svg.menu_icon(aria-hidden="true" class="fas faa-tada animated-hover" style="width:1.30em;height:1.30em;vertical-align:-0.15em;fill:currentColor;overflow:hidden;")
            use(xlink:href='#icon-jiaohuan')
          span 切换博客

        a.site-page#meihua-button(onclick="toggleWinbox()")
          svg.menu_icon(aria-hidden="true" class="fas faa-tada animated-hover" style="width:1.30em;height:1.30em;vertical-align:-0.15em;fill:currentColor;overflow:hidden;")
            use(xlink:href='#icon-chongwu1')
          span 主题设置

        a.site-page.icon-V.hidden#nightmode-button(onclick='switchNightMode()',  title=_p('rightside.night_mode_title'))
          svg(aria-hidden="true" class="fas faa-tada animated-hover" style="width:1.30em;height:1.30em;vertical-align:-0.15em;fill:currentColor;overflow:hidden;")
            use#modeicon(xlink:href='#icon-moon')
          span 昼夜切换

    !=partial('includes/header/menu_item', {}, {cache: true})

    #toggle-menu
      a.site-page(href="javascript:void(0);")
        i.fas.fa-bars.fa-fw


